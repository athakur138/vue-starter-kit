{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "vite.config.ts",
        "src/**/*",
        "src/**/*.vue",
        ".eslintrc.cjs"
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
